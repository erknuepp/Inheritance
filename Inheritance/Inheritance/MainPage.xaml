<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inheritance.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Inheritance Content Library" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Add a piece of content to the library" FontSize="Title" Padding="30,10,30,10"/>
        <Picker x:Name="contentTypePicker"/>
        <Entry x:Name="contentTitle" Text="" FontSize="16" Placeholder="Enter title"/>
        <Button x:Name="addContentButton" Text="Add Content" Clicked="addContentButtonClicked"/>
        <BoxView 
                   HeightRequest="1"
                   Color="LightGray"
                   Margin ="40, 0, 40, 0"/>
        <ListView x:Name="contentLibraryListView"/>


    </StackLayout>

</ContentPage>
